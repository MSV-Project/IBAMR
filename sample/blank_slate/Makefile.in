######################################################################
## Here specify the location of the IBAMR source and the location
## where IBAMR has been built.
IBAMR_SRC_DIR = @top_srcdir@
IBAMR_BUILD_DIR = @top_builddir@

top_srcdir = $(IBAMR_SRC_DIR)
top_builddir = $(IBAMR_BUILD_DIR)

######################################################################
## Include variables specific to the particular IBAMR build.
include $(IBAMR_BUILD_DIR)/config/make.inc

######################################################################
## Here specify the locations of the IBAMR headers and libraries.
CPPFLAGS = -I. -I$(IBAMR_BUILD_DIR)/config -I${IBAMR_SRC_DIR}/include -I${IBAMR_SRC_DIR}/stools/include $(CPPFLAGS_IBAMR)

IBAMR_LIB_2D = $(IBAMR_BUILD_DIR)/src/libIBAMR2d.la $(IBAMR_BUILD_DIR)/src/libIBAMR.la
IBAMR_LIB_3D = $(IBAMR_BUILD_DIR)/src/libIBAMR3d.la $(IBAMR_BUILD_DIR)/src/libIBAMR.la
STOOLS_LIB_2D = $(IBAMR_BUILD_DIR)/stools/src/libSTOOLS2d.la $(IBAMR_BUILD_DIR)/stools/src/libSTOOLS.la
STOOLS_LIB_3D = $(IBAMR_BUILD_DIR)/stools/src/libSTOOLS3d.la $(IBAMR_BUILD_DIR)/stools/src/libSTOOLS.la

######################################################################
## Build the IBAMR-based application.
SOURCES =
OBJS =

default:
	@echo "make one of: main2d, main3d"

main2d:
	if (test -f stamp-3d); then $(MAKE) clean; fi
	touch stamp-2d
	$(MAKE) PDIM=2 main-2d

main3d:
	if (test -f stamp-2d); then $(MAKE) clean; fi
	touch stamp-3d
	$(MAKE) PDIM=3 main-3d

main-2d: $(IBAMR_LIB_2D) $(STOOLS_LIB_2D) $(OBJS) $(SOURCES)
	$(LIBTOOL) --tag=CXX --mode=link $(CXX) $(CXXFLAGS) $(LDFLAGS) $(OBJS) \
	$(IBAMR_LIB_2D) $(STOOLS_LIB_2D) $(LDFLAGS) $(LIBS) -DNDIM=$(PDIM) -o main2d

main-3d: $(IBAMR_LIB_3D) $(STOOLS_LIB_3D)  $(OBJS) $(SOURCES)
	$(LIBTOOL) --tag=CXX --mode=link $(CXX) $(CXXFLAGS) $(LDFLAGS) $(OBJS) \
	$(IBAMR_LIB_3D) $(STOOLS_LIB_3D) $(LDFLAGS) $(LIBS) -DNDIM=$(PDIM) -o main3d

clean:
	$(RM) main2d main3d core
	$(RM) *.o *.lo *.objs *.ii *.int.c stamp-[23]d
	$(RM) -r .libs
